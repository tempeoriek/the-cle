@if (Model != null)
{
    if (Model.Any())
    {
        foreach (var item in Model)
        {


            @* Slider *@
            if (item.Id == 1)
            {
                if (item.DesktopItems.Any())
                {
                    <div class="d-none d-md-block">
                        <div class="carouseldesktop">
                            @foreach (var img in item.DesktopItems)
                            {<div><a href="@img.NavigateTo" class="clean"><img src="@img.PictureUrl" class="img-fluid" /></a></div>}
                        </div>
                    </div>

                }

                if (item.MobileItems.Any())
                {
                    <div class="d-block d-md-none">
                        <div class="carouselmobile">
                            @foreach (var img in item.MobileItems)
                            {<div><a href="@img.NavigateTo" class="clean"><img src="@img.PictureUrl" class="img-fluid" /></a></div>}
                        </div>
                    </div>
                }

            }

        }
    }
}


