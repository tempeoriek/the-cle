@model Skybrud.Social.Instagram.Responses.InstagramRecentMediaResponse




@if (Model.Body.Data.Any())
{

    <div class="container-fluid instagram-container">
        <div class="row align-items-center">
            <div class="col-12 col-md-3">
                <h1 class="text-center" style="text-transform:capitalize;">Follow<br /><a href="https://www.instagram.com/the-clementines/" target="_blank">@@the-clementines</a></h1>
            </div>
            <div class="col-12 col-md-9">
                <div class="igslider">
                    @for (int i = 0; i < 6; i++)
                    {
                        var post = Model.Body.Data[i];
                        <div><a href="@post.Link" target="_blank"><img src="@post.Standard" class="img-fluid" /></a></div>

                    }
                </div>
            </div>

        </div>
    </div>

}
