@model CategoryModel
@using Nop.Web.Models.Catalog;




@if (Model.SubCategories.Any())
{
    if (Model.SeName.Equals("brands", StringComparison.OrdinalIgnoreCase))
    {
        <h4>Brands</h4>
    }
    else
    {
        <h4>Categories</h4>
    }


    var selected = "";
    var i = 1;
    foreach (var item in Model.SubCategories)
    {
        if (item.isSelected)
        {
            selected = "checked=\"checked\"";
        }
        else
        {
            selected = "";
        }
        <div class="radio-alternate filter__radio"><input type="radio" id="cat_@(i)" name="cat" value="@(item.Id)" @selected><label for="cat_@(i)">@item.Name</label></div>

        i++;
    }
}
