@model ShoppingCartModel.DiscountBoxModel
@using Nop.Web.Models.ShoppingCart;
@if (Model.Display)
{
    <div class="coupon-box">
        <table class="table cart-total">
            <colgroup>
                <col />
                <col />
                <col />
            </colgroup>
            <tbody>
                <tr>
                    <td class="cart-total-left" colspan="2">
                       Promo Code
                    </td>
                    <td class="cart-total-right">
                        <input name="discountcouponcode" type="text" class="discount-coupon-code" />
                        <button type="submit" name="applydiscountcouponcode" class="button-2 apply-discount-coupon-code-button">
                            <i class="fa fa-check"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>

        @*<div class="coupon-code">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="col-md-10">
                        <input name="discountcouponcode" type="text" class="discount-coupon-code" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" name="applydiscountcouponcode" class="button-2 apply-discount-coupon-code-button">
                            <i class="fa fa-check"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>*@
        @if (!String.IsNullOrEmpty(Model.Message))
        {
            <div class="@(Model.IsApplied ? "message-success" : "message-failure")">
                @Model.Message
            </div>
        }
        @if (!String.IsNullOrEmpty(Model.CurrentCode))
        {
            <div class="current-code">
                <span class="applied-discount-code">@string.Format(T("ShoppingCart.DiscountCouponCode.CurrentCode").Text, Model.CurrentCode)</span>
                @*empty value (little hack for FormValueExistsAttribute)*@
                <input type="submit" name="removediscountcouponcode" value=" " title="@T("Common.Remove")" class="remove-discount-button" />
            </div>
        }
    </div>
}